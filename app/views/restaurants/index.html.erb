<div class="container">
  <h1>List of all restaurants</h1>

  <ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <strong><%= restaurant.name.capitalize %></strong> -
      <em><%= restaurant.address %></em> - <%= link_to "see details", restaurant_path(restaurant) %>
    </li>
  <% end %>
  </ul>
</div>
